{
  "name": "tmagic",
  "version": "0.1.4",
  "private": false,
  "description": "A simple and light-weight react UI library",
  "author": "wicken.w",
  "license": "MIT",
  "keywords": [
    "tmagic",
    "magic",
    "React",
    "UI",
    "Component"
  ],
  "homepage": "https://gogowwz.github.io/TMagic/Base/Button",
  "repository": {
    "type": "git",
    "url": "https://github.com/GogoWwz/TMagic"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "classnames": "^2.2.6",
    "web-vitals": "^0.2.4"
  },
  "peerDependencies": {
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "clean": "rimraf ./dist",
    "lint": "eslint --ext js,ts,tsx src --max-warnings 0",
    "test:pub": "cross-env CI=true react-scripts test",
    "husky": {
      "hooks": {
        "pre-commit": "npm run lint && npm run test:pub"
      }
    },
    "build": "npm run clean && npm run build-ts && npm run build-css",
    "build-ts": "tsc -p tsconfig.build.json",
    "build-css": "node-sass ./src/styles/index.scss ./dist/index.css",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "doc": "docz dev",
    "doc:build": "rimraf ./doc && docz build",
    "doc:serve": "rimraf ./.docz && docz build && docz serve",
    "prepublishOnly": "npm run lint && npm run test:pub && npm run build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.6.0",
    "@types/classnames": "^2.2.11",
    "@types/jest": "^26.0.19",
    "@types/node": "^12.19.9",
    "@types/react": "^16.14.2",
    "@types/react-dom": "^16.9.10",
    "cross-env": "^7.0.3",
    "customize-cra": "^1.0.0",
    "docz": "^2.3.1",
    "gatsby-plugin-sass": "^2.8.0",
    "husky": "^4.3.6",
    "node-sass": "^4.14.1",
    "react": "^17.0.1",
    "react-app-rewired": "^2.1.8",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.1",
    "rimraf": "^3.0.2",
    "svg-sprite-loader": "^5.2.1",
    "typescript": "^4.1.3"
  }
}
